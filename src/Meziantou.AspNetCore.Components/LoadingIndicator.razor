@if (IsLoading)
{
    if (LoadingTemplate != null)
    {
        @LoadingTemplate
    }
    else
    {
        <div>@LoadingText</div>
    }
}
else
{
    @ChildContent
}

@code{
    /// <summary>Gets or sets whether the component is in a loading state.</summary>
    [Parameter]
    public bool IsLoading { get; set; }

    /// <summary>Gets or sets the text to display while loading. Default is "Loading...".</summary>
    [Parameter]
    public string LoadingText { get; set; } = "Loading...";

    /// <summary>Gets or sets a custom template to display while loading. Takes precedence over <see cref="LoadingText"/>.</summary>
    [Parameter]
    public RenderFragment? LoadingTemplate { get; set; }

    /// <summary>Gets or sets the content to display when not loading.</summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}