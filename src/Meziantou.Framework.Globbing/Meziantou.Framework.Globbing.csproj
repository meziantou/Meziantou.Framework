<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(LatestTargetFrameworks);net472</TargetFrameworks>
    <Description>A globbing library for .NET. Can be used to match any string or with System.IO.Enumeration.</Description>
    <Version>1.0.14</Version>
    <IsTrimmable>true</IsTrimmable>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net472'">
    <PackageReference Include="System.Memory" Version="4.6.1" />
    <PackageReference Include="Microsoft.IO.Redist" Version="6.1.1" />
  </ItemGroup>

</Project>
