<Project Sdk="Meziantou.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFrameworks>$(LatestTargetFrameworksWindows);net462</TargetFrameworks>
    <IsTrimmable>false</IsTrimmable>
    <UseWPF>true</UseWPF>
    <Version>1.5.15</Version>
    <Description>Collection of Commands, Markup extensions, DependencyProperty, and collections for WPF</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Collections.Immutable" Version="9.0.9" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net462' OR '$(TargetFramework)' == 'net472'">
    <Reference Include="System.ComponentModel.DataAnnotations" />
  </ItemGroup>

</Project>
